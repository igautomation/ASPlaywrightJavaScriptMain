# Environment
NODE_ENV=dev
BASE_URL=https://your-site.com
API_KEY=token-or-key

# User Credentials (for globalSetup or tests)
TEST_USERNAME=admin@example.com
TEST_PASSWORD=password123

# Browser config
HEADLESS=true
SLOWMO=50

# Test artifacts
STORAGE_STATE=test-results/storageState.json
COLOR_SCHEME=light
LOCALE=en-US
TIMEZONE=UTC
GEOLOCATION_LATITUDE=37.7749
GEOLOCATION_LONGITUDE=-122.4194

# Screenshot & snapshot thresholds
SCREENSHOT_MAX_DIFF_PIXELS=50
SNAPSHOT_MAX_DIFF_PIXEL_RATIO=0.05

# Timeouts and concurrency
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=10000
WORKERS=4

# CI-specific
CI=true
CI_SHARD_TOTAL=1
CI_SHARD_INDEX=1