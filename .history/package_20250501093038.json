{
  "name": "@your-org/playwright-framework",
  "version": "1.0.0",
  "description": "An enterprise-grade Playwright test automation framework for Web UI, API, CI/CD, Reporting, and Xray Integration.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "framework": "./src/cli/index.js"
  },
  "scripts": {
    "start": "framework help",
    "test": "framework run",
    "run": "framework run",
    "generate-data": "framework generate-data",
    "list-tags": "framework list-tags",
    "generate-report": "framework generate-report",
    "open-report": "npx allure open reports/allure-report",
    "push-xray": "framework push-to-xray",
    "select-tests": "framework select-tests",
    "setup-ci": "framework setup-ci",
    "install-vscode": "framework install-vscode",
    "configure-retry": "framework configure-retry",
    "use-typescript": "framework use-typescript",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "xray:generate": "npx framework generate-xray-payload",
    "xray:push": "npx framework push-to-xray"
  },
  "keywords": [
    "playwright",
    "automation",
    "framework",
    "testing",
    "e2e",
    "api",
    "typescript",
    "ci-cd",
    "xray",
    "test-automation",
    "enterprise-framework"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/playwright-framework.git"
  },
  "author": "Your Organization",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@playwright/test": "^1.52.0",
    "ajv": "^8.17.1",
    "allure-playwright": "^2.15.1",
    "aws-sdk": "^2.1692.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^5.2.1",
    "fs-extra": "^10.1.0",
    "gh-pages": "^6.3.0",
    "graphql-request": "^5.2.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.503.0",
    "mime": "^3.0.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.15.6",
    "react-dom": "^19.1.0",
    "subscriptions-transport-ws": "^0.11.0",
    "uuid": "^8.3.2",
    "winston": "^3.17.0",
    "ws": "^8.18.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "allure-commandline": "^2.20.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.1",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "imports": {
    "@utils/*": "./src/utils/*",
    "@fixtures/*": "./src/fixtures/*",
    "@pages/*": "./src/pages/*"
  }
}